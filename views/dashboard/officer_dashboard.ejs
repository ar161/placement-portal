<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Officer Dashboard</title>
  <link rel="stylesheet" href="../css/dashboard.css">
</head>
<body>

<nav class="navbar">
  <div class="navbar-toggler" onclick="toggleSidebar()">
    <span>&#9776;</span>
  </div>
  <div class="navbar-brand">
    <span>Placement Portal</span>
  </div>
  <div class="navbar-user">
    <span>Welcome, <%= user.username %></span>
    <a href="/logout">Logout</a>
  </div>
</nav>

<aside class="sidebar">
  <div class="sidebar-header">
    <div class="sidebar-toggler" onclick="toggleSidebar()">
      <span>&#9776;</span>
    </div>
    <span class="sidebar-brand">Placement Portal</span>
  </div>
  <ul class="sidebar-menu">
    <li class="sidebar-item">
      <div class="submenu-header" onclick="toggleSubmenu(this)">
        <span>Manage Students</span>
        <span class="arrow">&#9660;</span>
      </div>
      <ul class="submenu">
        <li><a href="/placement_officer/add_student">Add Students</a></li>
        <li><a href="/placement_officer/edit_student_details">Edit Student Details</a></li>
      </ul>
    </li>
  </ul>
</aside>

<div class="main-content">
  <!-- Your existing officer dashboard content goes here -->
  <!-- ... -->
</div>

<script>
  function toggleSidebar() {
    document.querySelector('.sidebar').classList.toggle('sidebar-expanded');
  }

  function toggleSubmenu(header) {
    const submenu = header.nextElementSibling;
    submenu.style.display = submenu.style.display === 'block' ? 'none' : 'block';
    header.classList.toggle('open');
  }

  function toggleSidebar() {
    document.querySelector('.sidebar').classList.toggle('sidebar-expanded');
  }
  
</script>

</body>
</html>